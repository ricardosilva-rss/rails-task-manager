<h1>My tasks</h1>
<ul >
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
    <i class="fa fa-check-square-o"></i>
    <% else %>
    <i class="fa fa-square-o"></i>
    <% end %>

    <%= link_to task.title, task_path(task) %>
  </li>
<% end %>
</ul>

<%= link_to 'Add a new task', new_task_path %>
